<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http auto-config="true" use-expressions="true">
		
		<access-denied-handler error-page="/403" />
		<intercept-url pattern="/newRoute/**" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/creatingTrain" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/newTrain" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/routesInfo/**" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/newStationForm/**" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/newStation/**" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/journeyList/**" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/resetDB" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/initDB" access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/menu" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
		<intercept-url pattern="/schedule" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
		<intercept-url pattern="/appropriateJourneys/**" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
		<intercept-url pattern="/stationsChoosing" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
		<intercept-url pattern="/myTickets" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
		<intercept-url pattern="/out" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
	</http>
	
	<authentication-manager>
	  <authentication-provider>
	    <user-service>
		<user name="root@root.ru" password="root" authorities="ROLE_ADMIN" />
		<user name="user@user.ru" password="1234" authorities="ROLE_USER"/>
	    </user-service>
	  </authentication-provider>
	</authentication-manager>

</beans:beans>